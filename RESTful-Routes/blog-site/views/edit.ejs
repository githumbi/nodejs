<% include ./partials/header%>

<div class="container text-center border border-light p-5">
    <div class="jumbotron jumbotron-fluid">
<div class= "container">
<h3 >Edit <%= blogs.title%></h3>
  <form action="/blogs" method="post">
        <div class="form-group">
        <input class="form-control" type="text" name="blog[title]" value="<%= blogs.title%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="blog[image]"  value="<%= blogs.image%>">
        </div>
        <div class="form-group">
          <textarea class="form-control" name="" id="" rows="3"><%= blogs.body%></textarea>
        </div>
       
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Submit</button>  
        </div>     
        </form>
</div>
</div>
</div>



<% include ./partials/footer%>